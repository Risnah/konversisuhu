<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dapursulawesi.konversisuhu.MainActivity">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="502dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="4dp">

        <Button
            android:id="@+id/idconvert"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:onClick="diconvert"
            android:text="Convert"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="101dp" />

        <Button
            android:id="@+id/idclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/idconvert"
            android:layout_alignBottom="@+id/idconvert"
            android:layout_alignEnd="@+id/idinput"
            android:layout_marginEnd="13dp"
            android:onClick="diclear"
            android:text="Clear" />

        <EditText
            android:id="@+id/idinput"
            android:layout_width="155dp"
            android:layout_height="41dp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignEnd="@+id/textView2"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="75dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="22dp"
            android:layout_toStartOf="@+id/idinput"
            android:text="Input Number :"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="255dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="46dp"
            android:layout_marginTop="12dp"
            android:text="Temperature Converter"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017" />

        <TextView
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/convert_to"
            android:layout_alignBottom="@+id/idasal"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/cltocv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:layout_marginBottom="35dp"
            android:layout_above="@+id/idconvert"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/idasal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:layout_below="@+id/idinput"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/idconvert" />

        <Spinner
            android:id="@+id/idakhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/cc"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/idclear" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RISNAH 14.11.8214"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/idclear" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
